<!--add.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="line">
      <view class="name">招聘标题</view>
      <input name="title" class="input" value="{{title}}" />
    </view>
    <view class="line">
      <view class="name">职位薪酬</view>
      <picker name="remuneration" bindchange="onRemunerationChange" value="{{remunerationIndex}}" range="{{remunerations}}">
        <view class="picker">
          请选择：{{remuneration}}
        </view>
      </picker>
    </view>
    <view class="line">
      <view class="name">公司名称</view>
      <input name="companyName" class="input" value="{{companyName}}" />
    </view>
    <view class="line">
      <view class="name">所在城市</view>
      <picker name="region" mode="region" bindchange="onRegionChange" value="{{region}}">
        <view class="picker">
          请选择：{{region[0]}}.{{region[1]}}.{{region[2]}}
        </view>
      </picker>
    </view>
    <view class="line">
      <view class="name">性别要求</view>
      <radio-group name="requireSex" class="radio-group" bindchange="onSexChange">
        <label class="radio" wx:for="{{sexs}}">
          <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
        </label>
      </radio-group>
    </view>
    <view class="line">
      <view class="name">年龄要求</view>
      <picker name="requireAge" bindchange="onAgeChange" value="{{requireAgesIndex}}" range="{{requireAges}}">
        <view class="picker">
          请选择：{{requireAge}}
        </view>
      </picker>
    </view>
    <view class="line">
      <view class="name">招募人数</view>
      <input name="recruitNumber" type='number' class="input" value="{{recruitNumber}}" />
    </view>
    <view class="line">
      <view class="name">职位描述</view>
      <textarea name="jobDesc" auto-height value="{{jobDesc}}" />
    </view>
    <view class="line">
      <view class="left">
        <view class="name">联系人</view>
        <input name="userName" class="input" value="{{userName}}" />
      </view>
      <view class="right">
        <view class="name">手机</view>
        <input name="userMobile" class="input" value="{{userMobile}}" />
      </view>
    </view>
    <view class="line">
      <view class="name">邮箱</view>
      <input name="userEmail" class="input" value="{{userEmail}}" />
    </view>
    <view class="bottom">
      <button formType="submit">发布</button>
    </view>
  </form>
</view>