<!--index.wxml-->
<view class="container">
  <view class="head">
    <view>
      <button open-type="getUserInfo" class="addRecruitInfoButton" bindtap="onTapAddRecruitInfo">我来招聘</button>
    </view>
    <view>
      <view>累计招聘 {{recruitCount}}次</view>
      <view>累计应聘 {{acceptCount}}次</view>
    </view>
  </view>
  <scroll-view scroll-y wx:for="{{recruitInfoList}}" wx:key="id" class="recruitInfoList">
    <view class="items" data-id="{{item.id}}" bindtap='onTapRecruitInfoDetail'>
      <view class="top">
        <view class="id">{{item.id}}</view>
        <view class="icon"></view>
        <view class="title">{{item.title}}</view>
      </view>
      <view class="content">
        <view class="city">{{item.city}}</view>
        <view class="recruitNumber">{{item.recruitNumber}}人</view>
      </view>
      <view class="bottom">
        <view class="companyName">{{item.companyName}}</view>
      </view>
    </view>
  </scroll-view>
</view>